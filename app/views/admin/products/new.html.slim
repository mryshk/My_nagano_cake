.container
  .row
    .col-sm-12.col-md-8.col-lg-6.px-5.px-sm-0.mx-auto
      h4
        | 商品新規登録
      = form_with model: @product,url:'/admin/products', local:true do |f|
        .form-grop.mt-3
          = f.label :"商品画像" ,class: "col-4"
          = f.attachment_field :image, class:"form-control-static"
        .form-grop.mt-3
          = f.label :"商品名" ,class: "col-4"
          = f.text_field :name, placeholder:'商品名', class:"form-control-static col-7"
        .form-grop.mt-3
          .d-flex.align-items-center
            = f.label :"商品説明" ,class: "col-4"
            = f.text_area :explanation, size:"40x5", placeholder:'ここは説明文を記述します', class:"form-control-static col-7"
        .form-grop.mt-3
          = f.label :"ジャンル" ,class: "col-4"
          = f.collection_select :genre_id, Genre.all, :id, :genre_name, { prompt: '選択してください' }, class:"form-control-static col-7"
        .form-grop.mt-3
          = f.label :"税抜価格" ,class: "col-4"
          = f.text_field :tax_out_price, placeholder:'1000', class: "form-control-static col-7"
          | 円 
        .form-grop.mt-3
          = f.label :"販売ステータス" ,class: "col-4"
          = f.radio_button :is_active, "販売中",checked: true
          = f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"}
          = f.radio_button :is_active, :false
          = f.label :is_active, "販売中止中", {value: :false, style: "display: inline-block;"}
        .form-grop.mt-3
          p.text-center
            = f.submit '新規登録', class: "button btn btn-success"
