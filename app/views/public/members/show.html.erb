<div class="container" style="margin-bottom:400px;">
  <div class="row mt-5">
    <div class="col-8 offset-1">
      <h4 id="member-title">マイページ</h4>
      <h5 id="member-title"  class="d-inline-block mt-4 mr-5">登録情報</h5>
      <button class="btn btn-success d-inline-block">
        <%= link_to "編集する", edit_public_member_path(@member),class: "text-white" %>
      </button>
      <table id="member-table"class=" table mt-3">
          <tr>
            <th>氏名</th>
            <td ><%= @member.first_name %><%= @member.last_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @member.first_name_kana %><%= @member.last_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @member.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @member.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @member.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @member.email %></td>
          </tr>
          <tr>
            <th style="margin:0;">会員情報</th>
            <td style="margin:0;">
              <% if @member.is_deleted == true  %>
                <p style="margin:0;">退会中</p>
              <% else %>
                <p style="margin:0;">会員</p>
              <% end %>
            </td>
          </tr>
      </table>
      <div class="mt-5">
        <h5 id="member-title" class="d-inline-block mr-5">配送先</h5>
        <button class="btn btn-primary btn-sm d-inline-block" style="width:120px;"><%= link_to "一覧を見る" ,public_addresses_path,class: "text-white" %></button>
      </div>
      <div class="mt-3">
        <h5 id="member-title" class="d-inline-block mr-4">注文履歴</h5>
        <button class="btn btn-primary btn-sm d-inline-block"style="width:120px;"><%= link_to "一覧を見る", public_orders_path,class: "text-white"%></button>
      </div>
    </div>
  </div>
</div>