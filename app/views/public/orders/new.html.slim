.container
  h2.head-line.title_h2.text-dark.p-1.m-5.rounded-lg.border.border-dark
    | 会員情報入力
  .row
    .col-sm-9
      = form_with model: @order,url:comfirm_public_orders_path, local: true  do |f|
        h5.col-xs-3.sub-head.text-strong
          strong
            | 支払い方法
        .form-group.col-sm-4
          = f.radio_button :payment_method, :"クレジットカード", checked: true
          span
            | クレジットカード
        .form-group.col-sm-4
          = f.radio_button :payment_method, :"銀行振込"
          span
            | 銀行振込
        h5.col-xs-3.sub-head.text-strong
          strong
            | お届け先
        .form-group.col-sm-4
          = f.radio_button :addresses, "addresses", checked: true
          span
            | ご自身の住所
          br
          = "#{current_member.postal_code}  #{current_member.address}"
          br
          = "#{current_member.first_name} #{current_member.last_name}"
        .form-group.col-sm-4
          = f.radio_button :addresses, :"addresses"
          span
            | 登録済み住所から選択
          br
        .new-address.col-sm-4
          = f.radio_button :addresses, :"addresses"
          span
            | 新しいお届け先
          br
